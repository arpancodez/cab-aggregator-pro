# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cab_aggregator
REDIS_URL=redis://localhost:6379

# Provider APIs
UBER_CLIENT_ID=your_uber_client_id
UBER_CLIENT_SECRET=your_uber_client_secret
OLA_API_KEY=your_ola_api_key
OLA_API_URL=https://api.ola.co
RAPIDO_API_KEY=your_rapido_api_key
RAPIDO_API_URL=https://api.rapido.com
YATRI_SATHI_API_KEY=your_yatri_sathi_api_key
YATRI_SATHI_API_URL=https://api.yatrisathi.com

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:3000,https://example.com

# Logging
LOG_LEVEL=info

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
